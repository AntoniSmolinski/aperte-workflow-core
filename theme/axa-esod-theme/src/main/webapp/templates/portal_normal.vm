<!DOCTYPE html>

#parse ($init)

<html class="#language("lang.dir")" dir="#language("lang.dir")" lang="$w3c_language_id">

<head>
	<title>$the_title - $company_name</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, user-scalable=yes"/>
	$theme.include($top_head_include)
	
	#js("$javascript_folder/jquery-1.9.1.min.js")
	#js("$javascript_folder/jquery-plugins.js")
	#js("$javascript_folder/jquery.tools.min.js")
	#js("$javascript_folder/jqModal.js")
		#js("$javascript_folder/bootstrap.js")
	#js("$javascript_folder/bootstrap.min.js")
		#js("$javascript_folder/additional-methods.min.js")
	#js("$javascript_folder/jquery.validate.min.js")
	#js("$javascript_folder/funkcje.js")	
	#js("$javascript_folder/refresher.js")	
	#js("$javascript_folder/jquery.dataTables.js")
	#js("$javascript_folder/jquery.dataTables.bootstrap.js")
	#js("$javascript_folder/jquery.dateFormat-1.0.js")

</head>

<body class="$css_class">
#if ( $is_signed_in && ($permissionChecker.isAdmin() || $permissionChecker.isOmniadmin() ) )
#dockbar()
#end
<div id="wrapper">
#*	<a href="#main-content" id="skip-to-content">#language("skip-to-content")</a>
*#
	<header id="banner" role="banner">
		<hgroup id="heading">			
			<h1 class="company-title">
				<a class="logo" href="$company_url" title="#language("go-to") $company_name">
					<span>$company_name</span>
				</a>
			</h1>

			<h2 class="title-login">
				#if($is_signed_in)
					<a href="$sign_out_url" style="text-decoration:none;color:rgb(192,202,214);"><b>$sign_out_text: $user_name</b></a>
				#end
				#if(!$is_signed_in)
					<a href="$sign_in_url" id="sign-in" rel="nofollow">$sign_in_text</a>
				#end		
			</h2>
			<div id="languages">
					$theme.language() 
			</div>
			
#*			<h2 class="community-title">
				<a href="$community_default_url" title="#language("go-to") $community_name">
					<span>$community_name</span>
				</a>
			</h2>

			<h3 class="page-title">
				<span>$the_title</span>
			</h3>
*#
		</hgroup>

		

		#if ($update_available_url)
			<div class="popup-alert-notice">
				<a class="update-available" href="$update_available_url">#language("updates-are-available-for-liferay")</a>
			</div>
		#end

		#if ($has_navigation)
			#parse ("$full_templates_path/navigation.vm")
		#end
	</header>

	<div id="content">
#*		<nav class="site-breadcrumbs" id="breadcrumbs">
			<h1>
				<span>#language("breadcrumbs")</span>
			</h1>

			#breadcrumbs()
		</nav>
*#
		#if ($selectable)
			$theme.include($content_include)
		#else
			$portletDisplay.recycle()

			$portletDisplay.setTitle($the_title)

			$theme.wrapPortlet("portlet.vm", $content_include)
		#end
	</div>

	<footer id="footer" role="contentinfo">
		<p class="powered-by">			
			<a href="http://bluesoft.net.pl" rel="external" id="bluesoftlink" title="Bluesoft">&nbsp;</a>
			<a href="http://aperteworkflow.org" rel="external" id="apertelink" title="Aperte Workflow">&nbsp;</a>
		</p>
	</footer>
</div>

</body>

$theme.include($bottom_include)

</html>